<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend invoice report to show Beneficiary if set, using stable anchor -->
    <template id="report_invoice_document_inherit_beneficiary" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@name='origin']" position="after">
            <div class="col" t-if="o.beneficiary_id" name="beneficiary">
                <strong>Beneficiary</strong>
                <div t-field="o.beneficiary_id"/>
            </div>
        </xpath>
    </template>
</odoo>

