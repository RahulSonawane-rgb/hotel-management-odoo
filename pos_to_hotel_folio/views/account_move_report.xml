<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend invoice report to show Beneficiary under Customer if set -->
    <template id="report_invoice_document_inherit_beneficiary" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='row mt32 mb32']/div[1]" position="inside">
            <t t-if="o.beneficiary_id">
                <div>
                    <strong>Beneficiary:</strong>
                    <span t-esc="o.beneficiary_id.display_name"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>

