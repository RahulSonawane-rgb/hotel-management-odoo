<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inject Date and Table columns into Service list -->
    <record id="room_booking_view_form_inherit_pos_to_hotel_folio" model="ir.ui.view">
        <field name="name">room.booking.view.form.inherit.pos.to.hotel.folio</field>
        <field name="model">room.booking</field>
        <field name="inherit_id" ref="hotel_management_odoo.room_booking_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='service']//field[@name='service_line_ids']/list/field[@name='description']" position="after">
                <field name="pos_order_date" string="Date"/>
                <field name="pos_table_id" string="Table" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>

